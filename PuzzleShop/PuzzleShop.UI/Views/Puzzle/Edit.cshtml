@using PuzzleShop.Core
@model PuzzleShop.Repos.Dto.PuzzleDto
@{
    var brands = ViewBag.Brands as IEnumerable<Brand>;
    var countries = ViewBag.Countries as IEnumerable<Country>;
}
<h4>PuzzleDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Articul" class="control-label"></label>
                <input asp-for="Articul" class="form-control" />
                <span asp-validation-for="Articul" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label"></label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoURL" class="control-label"></label>
                <input asp-for="VideoURL" class="form-control" />
                <span asp-validation-for="VideoURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgPath" class="control-label"></label>
                <input asp-for="ImgPath" class="form-control" />
                <span asp-validation-for="ImgPath" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Brand" class="form-label"></label>
                <select class="form-select" size="3" id="brands" name="brands">
                    @foreach (var b in brands)
                    {
                        var selected = @Model.Brand == b.Name ? true : false;
                        <!option value="@b.Name" @(selected ? "selected" : "")>@b.Name</!option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Country" class="form-label"></label>
                <select class="form-select" size="3" id="countries" name="countries">
                    @foreach (var c in countries)
                    {
                        var selected = @Model.Country == c.Name ? true : false;
                        <!option value="@c.Name" @(selected ? "selected" : "")>@c.Name</!option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
